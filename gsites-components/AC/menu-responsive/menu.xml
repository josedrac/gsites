			            <div class="text">
			                <p class="title">Publicaciones externas</p>
			                <span class="subtitle">Un espacio para la divulgaci칩n</span>
			            </div>
			        </div>
			    </a>
		    </div>
		    <div class="card-container yellow short">
		    	<a href="">
			        <div class="content">
			            <div class="icon">
			                <img class="contact" src="https://raw.githubusercontent.com/sopraux/gsites/master/actividadtyc/img/Contactos.png" alt="">
			            </div>
			            <div class="text">
			                <p class="title big">Contactos</p>
			                <span class="subtitle">Un espacio para los usuarios</span>
			            </div>
			        </div>
		        </a>
		    </div>
		</div>

		<div id="functionsContainer"></div>
		<script type="text/javascript">
			
			$.ajax({
				  	url: 'https://raw.githubusercontent.com/sopraux/gsites/master/gsites-components/js/functionHelpers.js',
					success: function(result){
						var e = document.getElementById('functionsContainer');
			            e.innerHTML = '<scr'+'ipt id="sc1">'+result+'adjustGadgetHeight("container");</sc'+'ript>';
			            eval(document.getElementById('sc1').innerHTML);
					}
				});
		</script>

		]]>
	 </Content>
</Module>
