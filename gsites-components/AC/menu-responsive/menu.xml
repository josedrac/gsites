<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="AC-menu.xml" height ="105">
		<Require feature="idi"/>
	    <Require feature="locked-domain" />
		<Require feature="dynamic-height"/>
		<Require feature="setprefs" />
	</ModulePrefs>

	<Content type="html">
	    <![CDATA[
				<script src="https://www.google.com/jsapi" type="text/javascript"></script>
				<script src="https://www.google.com/jsapi" type="text/javascript"></script>
		<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>

		<head>
			<style type="text/css">
		        @font-face {
		            font-family: 'BBVA Web Light';
		            src:url('https://github.com/sopraux/gsites/raw/master/evolucionaDigital/fonts/web-light/web-light.eot');
		            src:url('https://github.com/sopraux/gsites/raw/master/evolucionaDigital/fonts/web-light/web-light.eot?iefix') format("embedded-opentype"),
		                url('https://github.com/sopraux/gsites/raw/master/evolucionaDigital/fonts/web-light/web-light.woff') format("woff"),
		                url('https://github.com/sopraux/gsites/raw/master/evolucionaDigital/fonts/web-light/web-light.ttf') format("truetype"),
		                url('https://github.com/sopraux/gsites/raw/master/evolucionaDigital/fonts/web-light/web-light.svg#BBVA Web Light') format("svg");
		            font-style: normal;
		            font-weight: normal;
		        }

		        .blue {
		        	background-color: #0078D2;
		        }

		        .blue-green {
		        	background-color: #3EB6BB;
		        }

		        .green {
		        	background-color: #84CA15;
		        }

		        .pink {
		        	background-color: #C8175E;
		        }

		        .yellow {
		        	background-color: #FDBD2C;
		        }

		        .container {
		        	max-width: 900px;
		        	width: 100%;
		        	float: left;
		        }

		        .card-container {
		            height: 150px;
					float: left;
					margin: 1%;
					border-radius: 2px;
		            border-radius: 2px;
		            -ms-border-radius: 2px;
		            -moz-border-radius: 2px;
		            -webkit-border-radius: 2px;
		            -khtml-border-radius: 2px;
		        }

		        .image-container {
		        	float: left;
					margin-top: 1%;
					margin-left: 1%;
					display: table;
					width: 18%;
					min-width: 120px;
					max-height: 150px;
					margin-right: 5%;
		        }

		        .image-container img {
		        	float: left;
					display: table-cell;
					width: 100%;
					height: 100%;
					max-height: 150px;
					max-width: 143px;
		        }

		        .large {
		        	width: 36%;
		        }

		        .short {
		        	width: 31.3%;
		        }

		        .content{
		            font-family: 'BBVA Web Light';
		            display: table;
		            font-size: 13px;
		            font-family: BBVA Web Light, Arial;
		            padding: 14px 14px 15px;
		        }

		        .title {
		        	font-weight: bold;
		        	font-size: 18px;
		        	margin-top: 15px;
		        	margin-bottom: 0px;
		        }

		    	.subtitle {
		    		font-size: 14px;
		    	}

		        .text, .icon {
		            display: table-cell;
		            float: left;
		            color: #FFFFFF;
		        }

		        .text {
		        	width: 100%;
		        }

		        .text .big {
		        	font-size: 28px;
		        	margin-top: 5px;
		        	font-weight: normal;
		        }

		        .icon {
		            width: 67px;
		            height: 67px;
		            vertical-align: middle;
		        }

		        .contact {
		        	margin-top: 10px;
		        }

		        @media (max-width: 909px){
		        	.text .big {
		        		font-size: 20px;
		        		margin-top: 15px;
		        	}

		        	.card-container {
		        		height: 180px;
		        	}

		        }

		        @media (max-width: 680px){
		        	
		        	.large {
		        		width: 48%;
		        	}

		        	.short {
		        		width: 48%;
		        	}

		        }

		    </style>
		</head>

		<div id="container" class="container">
			<div class="image-container">
				<img src="https://raw.githubusercontent.com/sopraux/gsites/master/actividadtyc/img/logo.png" />
