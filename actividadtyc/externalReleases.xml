    <script type="text/javascript">
      var month = new Array();
    	month[1] = "Ene";
    	month[2] = "Feb";
    	month[3] = "Mar";
    	month[4] = "Abr";
    	month[5] = "May";
    	month[6] = "Jun";
    	month[7] = "Jul";
    	month[8] = "Agt";
    	month[9] = "Sep";
    	month[10] = "Oct";
    	month[11] = "Nov";
    	month[12] = "Dic";

      var prefs = new gadgets.Prefs();

      var dataForm = {
        'key': '1hZ2TFoq3ihf7d9lVT7hx3P3cSui7kaG5s7zR781GnL8',
        'numberTab': 2
      };

      $.ajax({
          type: 'GET',
          url: 'https://script.google.com/a/macros/bbva.com/s/AKfycbyPKcDJzBWVSlwWOugDVov87-_xXlEFfWXa7adIswtNXNtM-mdv/exec',
          data: dataForm,
          dataType: 'jsonp',
          crossDomain: true,
          jsonpCallback: "on_result",
          success: function (data) {
              //Eliminamos la primera fila ya que no es necesaria
              data.splice(0, 1);

              getQueryParameters();
              handleQueryResponse(data);
          },
          error: function () {
              console.log('error');
          }
      });

      function isSearchDone() {
          if (gadgets.util.getUrlParameters().parent.split("=").length >= 2) {
          <!-- if (location.href.split("=").length >= 2) { -->
              return true;
          }
          return false;
      }

      function getParam(p){
          var params;
          if(gadgets.util.getUrlParameters().parent.split("?").length > 1){
          <!-- if (location.href.split("?").length > 1) { -->
              params = gadgets.util.getUrlParameters().parent.split("?")[1].split("&");
              <!-- params = location.href.split("?")[1].split("&"); -->
              for(var i=0; i<params.length; i++){
                  if(params[i].split("=")[0] == p)
                      return params[i].split("=")[1];
              }
          }
          return "";
      }

      function urldecode(str) {
         return decodeURIComponent((str+'').replace(/\+/g, '%20'));
      }

      function pagination(elements) {
          $('#pagination').smartpaginator({
              totalrecords: elements,
              recordsperpage: 1,
              length: 4,
              datacontainer: 'pages',
              dataelement: 'div.page',
              initval: 0,
          });
       }

      function getQueryParameters() {
          var filter = "";
          debugger
          var slider = prefs.getString("slider");
          var month = getParam("mes");
          var year = getParam("anyo");
          var inputText = urldecode(getParam("inputText").toLowerCase());
          var tag = urldecode(getParam("tag").toLowerCase());

          if( !(slider == "1" && ((month != "" || year != "") || inputText != "" || tag != "")) ) {
              var date = getMonthAndYear(slider);

              inputText = "";
              month = date.split(" ")[0];
              year = date.split(" ")[1];
          }

          if (year > 0)
              filter += " AND year(B) ="+ year;
          if (month > 0)
              filter += " AND month(B) = "+ (month-1);
          if(inputText != "")
              filter += " AND lower(A) like '%"+inputText+"%'";

          if(tag != "")
              filter += " AND lower(D) like '%"+tag+"%'";


          return filter;
      }

      function handleQueryResponse(data) {
          data = data;
          var filas;
          var pages;
          var html = "";
          var page = 0;
          var display = '';
          var classBorder = '';

          var slider = prefs.getString("slider");
          var mes = "";
          var month = getParam("mes");
          var year = getParam("anyo");
          var inputText = urldecode(getParam("inputText"));
          var tag = urldecode(getParam("tag"));
          var tagText = "";


          if( !(slider == "1" && ((month != "" || year != "") || inputText != "" || tag != "")) ) {

              var date = getMonthAndYear(slider);

              inputText = "";
              mes = date.split(" ")[0];
              month = getMonth(mes);
              year = date.split(" ")[1];
          }
          else{

              if(month > 0)
                  month = getMonth(month);
              else
                  month = "Todos los meses";

              if(year == 0)
                  year = "Todos los años";

              if(tag != "")
                  tagText = "Etiqueta "+tag;
          }

          if(tagText != "")
              document.getElementById('title').innerHTML = tagText;
          else if(inputText == "")
              document.getElementById('title').innerHTML = month +" "+ year;
          else {
              document.getElementById('title').innerHTML = 'Texto buscado: '+inputText;
          }


          //Como al hacer la query sql puede darse el caso que la etiqueta a buscar sea Desa, puede pillar Desa y Desarrollo, por lo que hay que quedarse con la etiqueta exacta.
          var aux = data;

          if(tag != ""){
              var x = 0;
              while(1){
                  if(aux.length <= x)
                      break;
                  if(item[x][3].split(',').indexOf(tag) == -1) {
                      aux.removeRow(x);
                      x--;
                  }
                  x++;
              }
          }

          data = aux;

          filas = data.length;

          pages = Math.ceil(filas / 8);

          if(filas<1)
              html += '<p class="not-found">No hay ningún contenido disponible.</p>';

          for(var i=0;i<filas;i++) {

              if(i % 8 == 3 || i % 8 == 7)
                  classBorder = 'content last';
              else
                  classBorder = 'content';

              if(i % 8 == 0)
              {
                  page++;

                  if(page == 1)   display = 'block';
                  else            display = 'none';

                  html += '<div id="page'+page+'" class="page" style="display:'+display+'">';
                  html += '   <ul id="column1" class="column">';
              }

              if(i % 8 < 4){
                data.forEach(function (elem) {
                    html += getElement(i + 1, elem[0], elem, elem[2], classBorder);
                });
              }


              if(filas < 4 && i == filas-1)
              {
                  html += '   </ul>';
                  html += '</div>'
              }
              else if(i % 8 == 3)
              {
                  html += '   </ul>';
                  html += '   <ul id="column2" class="column">'
              }

              if(i % 8 > 3){
                data.forEach(function (elem) {
                    html += getElement(i + 1, elem[0], elem, elem[2], classBorder);
                });
              }


              if((filas < 8 && i == filas-1) || (i % 8 == 7))
              {
                  html += '   </ul>';
                  html += '</div>'
              }

          }

          document.getElementById('pages').innerHTML = html;

          if(filas > 0)
              pagination(pages);
          <!-- gadgets.window.adjustHeight(); -->

      }

      function Go(destination){
          window.parent.location.href = destination;
          return false;
      }

      function getElement(number, text, elem, link, clase){
          var html = "";
          var date = elem[1].split('/');
          var day = new Date(elem[1]).getDate();
          console.log(elem[1]);

          var mon = month[new Date(elem[1]).getMonth() + 1];
          var year = new Date(elem[1]).getFullYear();

          html += '<li class="'+clase+'">';
          html += '   <a onclick="javascript:Go(\''+link+'\')">'
          html += '       <span class="number">'+number+'.</span>';
          html += '       <img class="icon" src="https://raw.githubusercontent.com/sopraux/gsites/master/actividadtyc/img/libro.png"/>';
          html += '       <div class="text">';
          html += '           <span class="subtitle">'+text+'</span>';
          html += '           <span class="date">'+ day + " " + mon + " " + year +'</span>';
          html += '       </div>';
          html += '   </a>';
          html += '</li>';

          return html;
      }

      function getMonth(index) {
          var month = '';
          switch(parseInt(index)) {
              case 1: month = 'Enero';
                      break;
              case 2: month = 'Febrero';
                      break;
              case 3: month = 'Marzo';
                      break;
              case 4: month = 'Abril';
                      break;
              case 5: month = 'Mayo';
                      break;
              case 6: month = 'Junio';
                      break;
              case 7: month = 'Julio';
                      break;
              case 8: month = 'Agosto';
                      break;
              case 9: month = 'Septiembre';
                      break;
              case 10: month = 'Octubre';
                      break;
              case 11: month = 'Noviembre';
                      break;
              case 12: month = 'Diciembre';
                      break;
          }
          return month;
      }

      function getMonthAndYear(slider) {

          var dateObj = new Date();
          var month = dateObj.getUTCMonth() + 1; //months from 1-12
          var year = dateObj.getUTCFullYear();

          switch(parseInt(slider)) {
              case 2:
                  if(month == 1){
                      month = 12;
                      year--;
                  }
                  else{
                      month--;
                  }
                  break;
              case 3:
                  if(month == 1){
                      month = 11;
                      year--;
                  }
                  else if(month == 2){
                      month = 12;
                      year--;
                  }
                  else{
                      month = month-2;
                  }
          }
          return month +' '+ year;
      }


