<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
  <ModulePrefs title="pagetitle.xml"
    description=""
    author_affiliation="Capgemini"
    height ="50">
    <Require feature="idi"/>
    <Require feature="locked-domain" />
	<Require feature="dynamic-height"/>   
	<Require feature="setprefs" />   
  </ModulePrefs>
<UserPref name="titlepage" display_name="Title of page" required="true" />  

 <Content type="html">
    <![CDATA[
	<script src="https://www.google.com/jsapi" type="text/javascript"></script>
	
	<style type="text/css">
	
	  	/* @group fonts */
		@font-face {
			font-family: 'BBVA Web Light';
			src:url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-light/web-light.eot');
			src:url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-light/web-light.eot?iefix') format("embedded-opentype"),
				url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-light/web-light.woff') format("woff"),
				url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-light/web-light.ttf') format("truetype"),
				url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-light/web-light.svg#BBVA Web Light') format("svg");
			font-style: normal;
			font-weight: normal;
		}
		/* @end */
	
		#titlepage{
			background-attachment: scroll;
			background-clip: border-box;
			background-color: transparent;
			background-image: url("https://bbvaportaldeayuda.googlecode.com/svn/trunk/img/bg-separador-doble.png");
			background-origin: padding-box;
			background-position: left bottom;
			background-repeat: repeat-x;
			background-size: auto auto;
			width: 100%;
			float: left;
			color: #0078D2;
			font-family: BBVA Web Light, Arial;
			font-size: 30px;
			margin: 5px 0px 10px 11px;
			padding: 0px;
			height: 40px;
			font-weight: normal;
			line-height: 20px;
			clear: both;
		}	
		
	</style>
	
	<!--[if IE 7]>
					
		<style type="text/css"> 
			#titlepage{	
				padding-bottom: 6px;
			}
		</style>
				
	<![endif]-->
	
	<h1 id="titlepage"></h1>	
   	
   	<script type="text/javascript">
	 	var gadgetHelper = null;
	 	var prefs = new gadgets.Prefs();
	 	var titlepage = prefs.getString("titlepage");
	 	document.getElementById("titlepage").innerHTML = titlepage;
   </script>
   
    ]]>
  </Content>
  <Content type="html" view="configuration" preferred_height="480">

<![CDATA[
<style type="text/css">
 	table td {
		color: #000;
		font-size: 11px;
		font-weight: bold;
	}
 </style>
 <table width="100%" border="0" id="tablaconfig">  
	<tr>       
       <td>
           Title -Page: <input type="text" size="100" id="titlepage" value="__UP_titlepage__"   onchange="registra('titlepage')"/>                   
       </td>
    </tr>
</table>	

<script type="text/javascript">           
    // Get userprefs
    var prefs = new gadgets.Prefs();           
    function registra(variable)
    {	

        prefs.set(variable,document.getElementById(variable).value);


    } 
	gadgets.window.adjustHeight();
</script>

 ]]>
 </Content>
</Module>