	<script src="https://rawgit.com/sopraux/gsites/master/evolucionaDigital/js/jquery.min.js" type="text/javascript"></script>
    <script src="https://rawgit.com/sopraux/gsites/master/evolucionaDigital/js/jquery-ui.min.js" type="text/javascript"></script>

   	<script type="text/javascript">
		var gadgetHelper = null;
		var prefs = new _IG_Prefs();
	 	var urlTable = prefs.getString("_table_query_url");
	 	var urlTable2 = prefs.getString("_table2_query_url");
	 	_IG_RegisterOnloadHandler(loadVisualizationAPI);

	 	function loadVisualizationAPI() {
			google.load("visualization", "1", {"packages": ["table"]});
			google.setOnLoadCallback(sendQuery);
			google.setOnLoadCallback(sendQuery2);
		}

		function sendQuery(){
			gadgetHelper = new google.visualization.GadgetHelper();
			var opts = {dataType:'jsonp'};
			var query = new google.visualization.Query(urlTable, opts);
			var querytosend = "select * where A <> 'IdHelp' order by G, F";
			query.setQuery(querytosend);
			query.send(handleQueryResponse);
		}

		function handleQueryResponse(response) {
			data = response.getDataTable();
			var filas = data.getNumberOfRows();
			var html = "";

			if(filas < 1) {
    			html += '<p class="text">No hay ningún contenido.</p>';
            }

			for(var i=0; i < filas; i++) {
			   	html += "<div class='block-linkHelp'>";
			   	html += "<h2>" + data.getValue(i,1) + "</h2>";
			   	html += "<p>" + data.getValue(i,2) + "</p>";
			   	html += "<a href='" + data.getValue(i,3) + "' target='_parent'>Acceder <img src='https://github.com/sopraux/gsites/raw/master/evolucionaDigital/img/arrow_right.png'></a>";
			    html += "</div>";
			}
			document.getElementById('listLinksHelpers').innerHTML += html;
		}

		function sendQuery2(){
			gadgetHelper = new google.visualization.GadgetHelper();
			var opts = {dataType:'jsonp'};
			var query = new google.visualization.Query(urlTable2, opts);
			var querytosend = "select * where A <> 'IdNovedad' order by C";
			query.setQuery(querytosend);
			query.send(handleQueryResponse2);
		}

		function handleQueryResponse2(response) {
			data = response.getDataTable();
			var filas = data.getNumberOfRows();
			var html = "";

			if(filas < 1) {
    			html += '<p class="text">No hay ningún contenido referente.</p>';
            }

                        
                    </div>

			for(var i=0; i < filas; i++) {
			   	html += "<div class='block-newMobile'>";
			   	html += "<div class='text'>";
			   	html += "<h2>" + data.getValue(i,1) + "</h2>";
			   	html += "<p>" + data.getValue(i,3) + "</p>";
			   	html += "<button onclick=javascript:Go('" + data.getValue(i,8) + "')>Más información</button>";
			   	html += "</div>";
			   	html += "<div class='img'><img src='" + data.getValue(i,6) + "'></div>";
			    html += "</div>";
			}
			document.getElementById('listNewMobile').innerHTML += html;
		}

		//delay loading
		delayRender();
	    function delayRender(){
	    	window.setTimeout('showIframes()',2000);
	    }

	 	function showIframes() {
		 	var iframes =document.getElementsByClassName('youtubeIframe').length;
		 	for (var i=0;i<iframes;i++) {
				document.getElementsByClassName('youtubeIframe')[i].style.display='block';
			}
	 	}

	 	$(function() {
            $( "#tabs" ).tabs();
        });

        function Go(destination){
            window.open(destination,'_parent');
            return false;
        }

  	</script>

    ]]>
