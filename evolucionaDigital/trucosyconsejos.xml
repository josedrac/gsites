   <script type="text/javascript">
	 var gadgetHelper = null;
	 var prefs = new _IG_Prefs();
	 var urlTable = prefs.getString("_table_query_url");
	
	 _IG_RegisterOnloadHandler(loadVisualizationAPI);
	 function loadVisualizationAPI() 
			{
				google.load("visualization", "1", {"packages": ["table"]});
				google.setOnLoadCallback(sendQuery);
			}
	
		
	 function sendQuery(){
	   gadgetHelper = new google.visualization.GadgetHelper();
	   var opts = {dataType:'jsonp'};
	   
	   var queryTrucos = new google.visualization.Query(urlTable, opts);
	   var queryConsejos = new google.visualization.Query(urlTable, opts);
	   
	   var queryTrucostosend = "select max(A),C,G where C like 'truco' group by C,G limit 3";
	   var queryConsejostosend = "select max(A),C,G where C like 'consejo' group by C,G limit 1";
	   
	   queryTrucos.setQuery(queryTrucostosend);			  
	   queryTrucos.send(handleQueryResponse);
	   
	   queryConsejos.setQuery(queryConsejostosend);			  
	   queryConsejos.send(handleQueryResponse1);
	   

	 }
	 function handleQueryResponse(response){
	 
	   data = response.getDataTable();
	   var filas = data.getNumberOfRows();
	
	   var html= "";
	   html +="<span class='title'>Trucos</span><ul class='trucos'>";
	   for(var i=0;i<filas;i++){
			
        html +="<li><a href='"+data.getValue(i,2)+"' target='_parent'>"+data.getValue(i,0)+"</a></li>";	
	 
	  }
	   html +="</ul>";
	   document.getElementById('trucos').innerHTML = html;
	   
	 }
	 
	 function handleQueryResponse1(response){
	 
	   data = response.getDataTable();
	   var filas = data.getNumberOfRows();
	
	   var html= "";
	   html +="<span class='title'>Consejos</span><ul class='trucos'>";
	   for(var i=0;i<filas;i++){
			
	    html +="<li><a href='"+data.getValue(i,2)+"' target='_parent'>"+data.getValue(i,0)+"</a></li>";
	
	 
	  }
	   html +="</ul>";
	   document.getElementById('consejos').innerHTML = html;
	   
	 }
	 
