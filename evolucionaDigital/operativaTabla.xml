    <div class="print">
        <a href="javascript:imprSelec('listportales')">
            <img src="https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/impresora.png" alt="">
        </a>
    </div>
    <div id="listportales"></div>

    <script type="text/javascript">
        var data;
        var html = "";
        var flagHeader = false;
        var flagFooter = true;
        var channels = ['Todos', 'Smartphone', 'PC', 'Tablet', 'Smartwatch', 'Linea', 'Cajeros'];
        var prefs = new _IG_Prefs();
        var urlTable = prefs.getString("_table_query_url");
        var urlTableDest = prefs.getString("_table2_query_url");
        _IG_RegisterOnloadHandler(loadVisualizationAPI);

        function loadVisualizationAPI()
        {
            google.load("visualization", "1", {"packages": ["table"]});
            google.setOnLoadCallback(sendQuery);
        }

        function sendQuery(){

            var request = function (authorized_url){
                gadgetHelper = new google.visualization.GadgetHelper();
                var opts = {dataType:'jsonp'};
                var query = new google.visualization.Query(authorized_url, opts);
                var querytosend;
                if (isSearchDone()) {
                    querytosend = "select * where A <> 'GRUPO FUNCIONAL' ";
                    if (product != "Todos" && product != "Destacados") {
                        querytosend = querytosend.concat(" AND A like '" + product + "' ");
                    }
                    if (channel != channels[0]) {
                        querytosend += getChannelCondition(channel);
                    }
                   querytosend = querytosend.concat(" order by B");
                }
                else {
                    querytosend = "select * where A <> 'GRUPO FUNCIONAL' order by B";
                }
                query.setQuery(querytosend);
                query.send(handleQueryResponse);
            }

            if (!isSearchDone()) {
                request(urlTableDest);
            } else {
                var product = getSelectedProduct();
                var channel = getSelectedChannel();
                if (product == "Destacados") {
                    window.Environment.sendAuthorizedQuery(urlTableDest, request);
                } else {
                    window.Environment.sendAuthorizedQuery(urlTable, request);
                }
            }
        }

        function getChannelCondition(channel) {
            var sql="";
            if (channel == channels[1]) {
                sql += " AND (D like 'x' OR E like 'x' OR F like 'x' OR G like 'x' OR H like 'x') ";
            }

            if (channel == channels[2]) {
                sql += " AND (I like 'x') ";
            }

            if (channel == channels[3]) {
                sql += " AND (J like 'x' OR K like 'x') ";
            }

            if (channel == channels[4]) {
                sql += " AND (L like 'x' OR M like 'x') ";
            }

            if (channel == channels[5]) {
                sql += " AND (P like 'x') ";
            }

            if (channel == channels[6]) {
                sql += " AND (Q like 'x') ";
            }

            return sql;
        }

        function handleQueryResponse(response) {
            data = response.getDataTable();
            createBody();
            document.getElementById('listportales').innerHTML = html;
        }

        function createHeader() {
            html += "<table><tr id='tableHeader'>";
            html +=     "<td class='colHeader firstcol'></td>";
            html +=     "<td class='colHeader' align='center'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphoneb.png' /></div><div class='headerText'>Smartphone APP BBVA</div></td>";
            html +=     "<td class='colHeader' align='center'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphoneb.png' /></div><div class='headerText'>Smartphone APP BBVA WALLET</div></td>";
            html +=     "<td class='colHeader' align='center'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphoneb.png' /></div><div class='headerText'>Smartphone bbva.es</div></td>";
            html +=     "<td class='colHeader' align='center'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/mouseb.png' /></div><div class='headerText'>PC bbva.es</div></td>";
            html +=     "<td class='colHeader' align='center'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/tabletb.png' /></div><div class='headerText'>Tablet APP BBVA</div></td>";
            html +=     "<td class='colHeader' align='center'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/telefonog.png' /></div><div class='headerText'>Línea BBVA</div></td>";
            html +=     "<td class='colHeader' align='center'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cajerog.png' /></div><div class='headerText'>Red de cajeros BBVA</div></td>";
            html +=     "<td class='colHeader' align='center' id='lastcol'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/smartwatch.png' /></div><div class='headerText'>SmartWatch</div></td>";
            html += "</tr>";
        }

        function createBody() {
            var filas = data.getNumberOfRows();
            var previousAction = "";
            if (!flagHeader) {
                createHeader();
            }
            flagHeader = true;
            for (var i =0 ; i < filas; i++) {
                if (data.getValue(i,1) == 'null' || data.getValue(i,1) == null) continue;
                if (data.getValue(i,2) == 'null' || data.getValue(i,2) == null) continue;

                if (previousAction != data.getValue(i,1)) {
                    previousAction = data.getValue(i,1);
                    html += "<tr class='rowTitle'><td>"+data.getValue(i,1)+"</td></tr>";
                }

                html +=  "<tr class='row'>";
                html +=     "<td class='colBody firstcol'><div class='text'>";
                if(data.getValue(i,13) == 'x') {
                    html += "<span class='click' onclick=javascript:Go('https://sites.google.com/a/bbva.com/evolucionadigital/novedades?idOperativa="+ data.getValue(i,14) +"')>";
                }
                html +=         data.getValue(i,2);
                if(data.getValue(i,13) == 'x') {
                    html += "</span>";
                }
                html +=     "</div></td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 3, 4)+"</td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 6, 7)+"</td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 5)+"</td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 8)+"</td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 9, 10)+"</td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 15)+"</td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 16)+"</td>";
                html +=     "<td class='colBody' align='center'>"+getIcon(data, i, 11, 12)+"</td>";
                html +=  "</tr>";
                previousAction = data.getValue(i,1);
            }
            if (!flagFooter) {
                html += "</table>";
            } else {
                flagFooter = false;
            }
        }

        function getSelectedChannel() {
            return decodeURI(gadgets.util.getUrlParameters().parent.split("=")[2].split("&")[0]).replace(/\+/g, ' ');
        }

        function getSelectedProduct() {
            return decodeURI(gadgets.util.getUrlParameters().parent.split("=")[1].split("&")[0]).replace(/\+/g, ' ');
        }

        function isSearchDone() {
            if (gadgets.util.getUrlParameters().parent.split("=").length >= 2) {
                return true;
            }
            return false;
        }

        function getIcon(data, row, column, columnb) {
            var htmlIcon="";

            var iconCols = {
                3: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/android.png', 14, 16],
                4: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/ios.png', 13, 16],
                5: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphone.png', 10, 16],
                6: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/android.png', 14, 16],
                7: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/ios.png', 13, 16],
                8: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/mouse.png', 11, 16],
                9: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/android.png', 14, 16],
                10: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/ios.png', 13, 16],
                11: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/android.png', 14, 16],
                12: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/ios.png', 13, 16],
                15: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/telefonop.png', 15, 15],
                16: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cajerop.png', 16, 15],
            };


            if (typeof columnb == "undefined") {
                if (data.getValue(row, column) != 'x') {
                    htmlIcon = "<div class='centerText'>-</div>";
                    return htmlIcon;
                }
                else{
                    htmlIcon += "<div class='colBodyIcon center'><img class='headerImg' src='"+iconCols[column][0]+"' style='width:"+iconCols[column][1]+"; height:"+iconCols[column][2]+";' /></div>";
                    return htmlIcon;
                }
            }
            else {
                if (data.getValue(row, column) != 'x' && data.getValue(row,columnb) != 'x') {
                    htmlIcon = "<div class='centerText'>-</div>";
                    return htmlIcon;
                }
            }

            var s = 0;
            if(data.getValue(row, column) == 'x')
                s++;
            if(data.getValue(row, columnb) == 'x')
                s++;

            if (typeof column != "undefined" && data.getValue(row, column) == 'x') {
                htmlIcon += "<img class='headerImg' src='"+iconCols[column][0]+"' style='width:"+iconCols[column][1]+"; height:"+iconCols[column][2]+";' />";
            }

            if (typeof columnb != "undefined" && data.getValue(row, columnb) == 'x') {
                htmlIcon += "<img class='headerImg' src='"+iconCols[columnb][0]+"' style='width:"+iconCols[columnb][1]+"; height:"+iconCols[columnb][2]+";' />";
            }
            return htmlIcon;

        }

        function Go(destination){
            window.open(destination,'_parent');
            return false;
        }

        function imprSelec(id){
            var contents = $("#listportales").html();
            var frame1 = $('<iframe />');
            frame1[0].name = "frame1";
            frame1.css({ "position": "absolute", "top": "-1000000px" });
            $("body").append(frame1);
            var frameDoc = frame1[0].contentWindow ? frame1[0].contentWindow : frame1[0].contentDocument.document ? frame1[0].contentDocument.document : frame1[0].contentDocument;
            frameDoc.document.open();
            //Create a new HTML document.
            frameDoc.document.write('<html><head><title>Operativa por canal</title>');
            frameDoc.document.write('<style>@media print{@page {size: landscape; margin-bottom: 0mm;} html{margin: .5cm auto;} .headerImg {margin: 0 1mm; }} table td {border-bottom:1px solid #e5e5e5;} table tr.rowTitle td {font-weight: bolder; border: none; padding-top: 5mm;} </style>');
            frameDoc.document.write('</head><body>');
            //Append the DIV contents.
            frameDoc.document.write(contents);
            frameDoc.document.write('</body></html>');
            frameDoc.document.close();
            setTimeout(function () {
                window.frames["frame1"].focus();
                window.frames["frame1"].print();
                frame1.remove();
            }, 500);
        }

  </script>
    ]]>
