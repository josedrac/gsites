    <div id="listportales"></div>

    <script type="text/javascript">
        var data;
        var prefs = new _IG_Prefs();
        var urlTable = prefs.getString("_table_query_url");
        var titlecomboVideo = prefs.getString("titlecomboVideo");
        _IG_RegisterOnloadHandler(loadVisualizationAPI);

	    function loadVisualizationAPI()
        {
            google.load("visualization", "1", {"packages": ["table"]});
            google.setOnLoadCallback(sendQuery);
		}

		function sendQuery()
        {
				gadgetHelper = new google.visualization.GadgetHelper();
				var opts = {dataType:'jsonp'};
                var query = new google.visualization.Query(urlTable, opts);
                var querytosend;
                if (isSearchDone()) {
                    var channel = getSelectedChannel();
                    var product = getSelectedProduct();
                    if (channel == "Todos") {
                       querytosend = "select * where A <> 'GRUPO FUNCIONAL' and A like '"+product+"' order by B";
                    }
                    else {
                       querytosend = "select * where A <> 'GRUPO FUNCIONAL' and A like '"+product+"' order by B";
                    }
                }
                else {
				    querytosend = "select * where A <> 'GRUPO FUNCIONAL' and A like 'Valores' order by B";
                }
				query.setQuery(querytosend);
				query.send(handleQueryResponse);
        }

        function handleQueryResponse(response) {
            data = response.getDataTable();
            renderPage();
        }


        function renderPage() {
            var html = "";
            html += createHeader();
            html += createBody();
		    document.getElementById('listportales').innerHTML += html;
        }

        function createHeader() {
            var html = "<div id='tableHeader'>";
                html +=         "<div class='colHeader firstcol'></div>";
                html +=         "<div class='colHeader'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/ED-operativa/evolucionaDigital/img/cellphoneb.png' /></div><div class='headerText'>Smartphone APP BBVA</div></div>";
                html +=         "<div class='colHeader'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/ED-operativa/evolucionaDigital/img/cellphoneb.png' /></div><div class='headerText'>Smartphone APP BBVA WALLET</div></div>";
                html +=         "<div class='colHeader'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/ED-operativa/evolucionaDigital/img/cellphoneb.png' /></div><div class='headerText'>Smartphone bbva.es</div></div>";
                html +=         "<div class='colHeader'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/ED-operativa/evolucionaDigital/img/mouseb.png' /></div><div class='headerText'>PC bbva.es</div></div>";
                html +=         "<div class='colHeader' id='lastcol'><div><img class='headerImg' src='https://raw.githubusercontent.com/sopraux/gsites/ED-operativa/evolucionaDigital/img/tabletb.png' /></div><div class='headerText'>Tablet APP BBVA</div></div>";
                html +=     "</div>";
            return html;
       }

       function createBody() {
            var html = "";
            var filas = data.getNumberOfRows();
            var previousAction = "";
            for (var i=0;i<filas;i++) {

                if (previousAction != data.getValue(i,1)) {
                    previousAction = data.getValue(i,1);
                    html += "<div class='rowTitle'>"+data.getValue(i,1)+"</div>";
                }

                html +=  "<div class='row'>";
                html +=     "<div class='colBody firstcol'>"+data.getValue(i,2)+"</div>";
                html +=     "<div class='colBody'>getIcon(data, i, 3)</div>";
                html +=     "<div class='colBody'>getIcon(data, i, 6)</div>";
                html +=     "<div class='colBody'>getIcon(data, i, 5)</div>";
                html +=     "<div class='colBody'>getIcon(data, i, 7)</div>";
                html +=     "<div class='colBody'>getIcon(data, i, 8)</div>";
                html +=  "</div>";
                previousAction = data.getValue(i,1);
            }
            return html;
       }

        function getSelectedChannel() {
            return gadgets.util.getUrlParameters().parent.split("=")[2];
        }

        function getSelectedProduct() {
            return gadgets.util.getUrlParameters().parent.split("=")[1].split("&")[0];
        }

        function isSearchDone() {
            if (gadgets.util.getUrlParameters().parent.split("=").length >= 2) {
                return true;
            }
            return false;
        }

        function getIcon(data, row, column) {
            var html="";
            if (data.getValue(row, column) != 'x') {
                html = "<div style='text-align:center;'>-</div>";
                return html;
            }

            var iconCols = {
                3: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphone.png', 10, 16],
                4: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphone.png', 10, 16],
                5: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphone.png', 10, 16],
                6: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphone.png', 10, 16],
                7: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/cellphone.png', 10, 16],
                8: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/mouse.png', 11, 16],
                9: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/tablet.png', 13, 16],
                10: ['https://raw.githubusercontent.com/sopraux/gsites/master/evolucionaDigital/img/tablet.png', 13, 16]
                };

            html += "<div><img class='headerImg' src='"+iconCols[column][0]+"' style='width:"+iconCols[column][1]+"; height:"+iconCols[column][2]+";' /></div>";

            retun html;
        }

  </script>
