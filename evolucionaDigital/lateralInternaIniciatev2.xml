          ul li:last-child{
						border: 0;
						padding-bottom: 11px;
						padding-top: 17px;
					}     
					ul li a{
            padding-left: 2px;
						vertical-align: 3px;
						text-decoration: none;
            font-size: 12px; font-family: Arial; 
            font-weight: bold;
						color: #0073C9;
