<Module title="Module dynamically resize view">
   <ModulePrefs title="ED-presentation.xml">
      <Require feature="idi"/>
      <Require feature="locked-domain" />
      <Require feature="dynamic-height"/>
      <Require feature="setprefs" />
   </ModulePrefs>
   <UserPref name="_presentarion_url" default_value="" display_name="Data source url (Ej:https://docs.google.com/a/bbva.com/presentation/d/1F3jOa33a2DzscOvMxYUkBg6THXBZf4AOpjEHnMVg/embed)" required="true" />
   <Content view="canvas" preferred_height="20px">
      <![CDATA[
   
      <div id="updateNode">
         <div id="presentation"></div>
      </div>
      
      <script src="https://rawgit.com/sopraux/gsites/master/evolucionaDigital/js/jquery.min.js" type="text/javascript"></script>
      <script type="text/javascript">

         var gadgetHelper = null;
         var prefs = new _IG_Prefs();
         var urlTable = prefs.getString("_presentarion_url");

         /* Obtengo las dimensiones del GADGET en google sites */
         if (gadgets.window) {
            var viewport = gadgets.window.getViewportDimensions();
            if (viewport.width) {
               var widthGadget = viewport.width;
               var heightGadget = viewport.width * 0.8 - 28;
            }
         }

         /* Oculto los controles de la presentación */
         $('#presentation').css({
            height: heightGadget,
            overflow: 'hidden'
         });

         /* Función que genera el iframe */
         var iframe = (function (m) {
            "use strict";

            function fif ( el ) {
               var iframe = document.createElement("iframe"), doc;
               (iframe.frameElement || iframe).style.cssText = "width:" + widthGadget + "px; height:" + widthGadget * 0.8 + "px;";
               iframe.frameBorder = 0;
               iframe.scrolling = "no";
               iframe.seamless = "seamless";
               iframe.src = "javascript:false";
               el.appendChild(iframe);
               doc = iframe.contentWindow.document;

               doc.open().write(
                  "<body style=\"margin:0;padding:0;border:0;overflow:hidden\" " +
                  "onload=\"" +
                  "var d=document,f=d.body.appendChild(d.createElement('iframe'));" +
                  "f.style.cssText = 'width:100%;height:100%;';" +
                  "f.frameBorder=0;f.scrolling='no';f.seamless='seamless';" +
                  "f.src = '" + _presentarion_url + "';\">"
               );
               doc.close();
            } 

            fif(document.getElementById("presentation"));

         })(); 

         gadgets.window.adjustHeight();

      </script>
      ]]>
   </Content>
</Module>







