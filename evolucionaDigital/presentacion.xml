<Module title="Module to make AJAX request and dynamically resize view">
   <ModulePrefs title="ED-presentation.xml">
      <Require feature="dynamic-height" />
   </ModulePrefs>
   <Content view="canvas" preferred_height="20px">
      <![CDATA[
      
      <style>
         iframe {
            width: 100%;
            height: auto;
         }
      </style>

      <div id="updateNode">This is my initial content to be updated</div>

      <script type="text/javascript">

         html = '<iframe src="https://docs.google.com/a/bbva.com/presentation/d/1F3jOa33a2DzscOvMxYdhCUkBg6THXBZf4AOpjEHnMVg/embed" frameborder="0" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true"></iframe>';


         document.getElementById('updateNode').innerHTML = html;
         
         gadgets.window.adjustHeight();


      </script>
      ]]>
   </Content>
</Module>