			<script type="text/javascript">

				function getUrlParameter(parameterName) {
					var params = gadgets.util.getUrlParameters()["parent"].split("?")[1].split('&');

					for (var i = 0; i < params.length; i++) {
						var p = params[i].split('=');
						if (p[0] == parameterName) {
							return decodeURIComponent(p[1]);
						}
					}
					return false;
				}

				function goAppointments() {
					window.parent.location.href = 'https://sites.google.com/a/bbva.com/newstycbbvaespana/appointments/?date=' + getUrlParameter("date") + '';
				}

				adjustGadgetHeight("appoinments");

			</script>

