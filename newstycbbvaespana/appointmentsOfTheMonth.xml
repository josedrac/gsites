<?xml version="1.0" encoding="UTF-8" ?>
<Module>

	<ModulePrefs title="NB - appointmentsOfTheMonth.xml">
		<Require feature="idi"/>
		<Require feature="locked-domain" />
		<Require feature="dynamic-height"/>
		<Require feature="setprefs" />
	</ModulePrefs>

	<UserPref name="_table_query_url" default_value="" display_name="Data source url (Ej:https://docs.google.com/spreadsheet/ccc?key=0AoYEewut2JmZdG5HM2VLTTdwQUlLdmhnMk1DLXBWZl)" required="true" />

	<Content type="html">
	    <![CDATA[
			<script src="https://www.google.com/jsapi" type="text/javascript"></script>

			<style type="text/css">

				@font-face {
					font-family: 'BBVA Web Light';
					src:url('https://rawgit.com/sopraux/gsites/master/newstycbbvaespana/fonts/web-light/web-light.eot');
					src:url('https://rawgit.com/sopraux/gsites/master/newstycbbvaespana/fonts/web-light/web-light.eot?iefix') format("embedded-opentype"),
						url('https://rawgit.com/sopraux/gsites/master/newstycbbvaespana/fonts/web-light/web-light.woff') format("woff"),
						url('https://rawgit.com/sopraux/gsites/master/newstycbbvaespana/fonts/web-light/web-light.ttf') format("truetype"),
						url('https://rawgit.com/sopraux/gsites/master/newstycbbvaespana/fonts/web-light/web-light.svg#BBVA Web Light') format("svg");
					font-style: normal;
					font-weight: normal;
				}

				table {
			    	border-collapse: collapse;
					background-image: url(https://rawgit.com/sopraux/gsites/master/newstycbbvaespana/img/border-bottom-shaded.png);
					background-position: bottom;
					background-repeat: repeat-x;
					width: 100%;
				}

				table thead tr th {
					font-family: BBVA Web Light, Arial;
					font-weight: normal;
					font-size: 16px;
				    text-align: left;
					color: #0078D2;
					border-bottom: 1px solid #DDE3EA;
				    padding: 0 20px 6px;
				}

				table thead tr th.col-1 {
					width: 27%;
				}

				table thead tr th.col-2 {
					width: 15%;
				}

				table thead tr th.col-3 {
					width: 22%;
				}

				table thead tr th.col-4 {
					width: 36%;
				}

				table tbody tr td {
					font-family: arial;
					font-size: 12.25px;
					color: #434A58;
				    padding: 7.25px 20px;
			        vertical-align: top;
				}

				table tbody tr:first-child td {
					padding-top: 26px;
				}

				table tbody tr:last-child td {
					padding-bottom: 25px;
				}

				table tbody tr td.text-right {
					text-align: right;;
				}

				table tbody tr td a {
					font-family: BBVA Web Light, Arial;
					font-size: 18px;
					color: #0078D2;
					text-decoration: none;
					position: relative;
				    top: -4px;
				    outline: none;
				}

				table tbody tr td a:visited {
					color: #0078D2;
				}

				table tbody tr td a span {
					position: relative;
				    top: -4px;
				    font-weight: bold;
				    color: #0079C1;
				}

				table thead tr th:not(:first-child),
				table tbody tr td:not(:first-child) {
					padding-left: 0;
				}

			</style>

			<div id="appointmentsOfTheMonth"></div>

		   	<script type="text/javascript">

			 	var gadgetHelper = null;
				var prefs = new _IG_Prefs();
				var urlTable = prefs.getString("_table_query_url");

				_IG_RegisterOnloadHandler(loadVisualizationAPI);

				function loadVisualizationAPI(){
					google.load("visualization", "1", {"packages": ["table"]});
					google.setOnLoadCallback(sendQuery);
				}

				function sendQuery() {
					gadgetHelper = new google.visualization.GadgetHelper();
					var opts = {dataType:'jsonp'};
					var query = new google.visualization.Query(urlTable, opts);
					var querytosend = "select *";
					query.setQuery(querytosend);
					query.send(handleQueryResponse);
				}

				function handleQueryResponse(response) {
					data = response.getDataTable();
					var filas = data.getNumberOfRows();
					var appointmentsOfTheMonth = '';

					if(filas < 2) {
	    				appointmentsOfTheMonth += '<p>No hay ning√∫n contenido.</p>';
	            	}
	            	else {

		            	appointmentsOfTheMonth += '<table>';
				 		appointmentsOfTheMonth += '<thead>';
				 		appointmentsOfTheMonth += '<tr>';
						appointmentsOfTheMonth += '<th class="col-1">' + data.getValue(0,1) + '</th>';
						appointmentsOfTheMonth += '<th class="col-2">' + data.getValue(0,2) + '</th>';
						appointmentsOfTheMonth += '<th class="col-3">' + data.getValue(0,3) + '</th>';
						appointmentsOfTheMonth += '<th class="col-4" colspan="2">' + data.getValue(0,4) + '</th>';
				 		appointmentsOfTheMonth += '</tr>';
				 		appointmentsOfTheMonth += '</thead>';
				 		appointmentsOfTheMonth += '<tbody>';

	            		for(i=1; i < filas; i++) {
							appointmentsOfTheMonth += '<tr>';
							appointmentsOfTheMonth += '<td>' +  data.getValue(i,1) + '</td>';
							appointmentsOfTheMonth += '<td>' +  data.getValue(i,2) + '</td>';
							appointmentsOfTheMonth += '<td>' +  data.getValue(i,3) + '</td>';
							appointmentsOfTheMonth += '<td>' +  data.getValue(i,4) + '</td>';
							
							if(data.getValue(i,5) != null && typeof data.getValue(i,5) != 'undefined' && data.getValue(i,5) !== undefined && data.getValue(i,5) != "") {
								appointmentsOfTheMonth += '<td class="text-right"><a href="' + data.getValue(i,5) + '">apuntate<span>+</span></a></td>';
							}

							appointmentsOfTheMonth += '</tr>';
	            		}

	            		appointmentsOfTheMonth += '</tbody>';
	            		appointmentsOfTheMonth += '</table>';

	            	}

	            	document.getElementById("appointmentsOfTheMonth").innerHTML = appointmentsOfTheMonth;

				}

		   </script>

	    ]]>
	</Content>
</Module>
